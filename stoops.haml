        .posts
          {block:TagPage}
          .tag-header
            %h5.center
              Showing all posts tagged with&nbsp;
              %a{:href => "{TagURL}"} {Tag}
          {/block:TagPage}
          {block:Posts}
          %article{:class => "single-post {PostType} {block:Photoset}photoset{/block:Photoset} {TagsAsClasses}"}
            .post-inner
              -# Text Post
              {block:Text}
              {block:Title} 
              %h1.post-title
                %a.permalink{:href => "{Permalink}", :title => "Read more of {Title}"} {Title}
              {/block:Title}
              {block:Body}
              .text-post-body
                {Body}
                {block:More}
                %h5.read-more-link
                  %a{:href => "{Permalink}", :title => "Read more of {Title}"} Read More
                {/block:More}
              {/block:Body}
              {/block:Text}
              
              -# Photo Post
              {block:Photo}
              .photo-wrap
                %picture
                  %source{:media => "(max-width: 500px)", :srcset => "{PhotoURL-500}"}
                  %source{:media => "(min-width: 501px)", :srcset => "{PhotoURL-HighRes}"}
                  %img{:src => "{PhotoURL-HighRes}", :alt => "{PhotoAlt}"}
                {block:LinkURL}
                .clickthrough
                  {LinkOpenTag}{LinkURL}{LinkCloseTag}
                {/block:LinkURL}
              {block:Caption}
              .caption-post-body
                {Caption}
              {/block:Caption}
              {/block:Photo}

              -# Panorama Post
              {block:Panorama}
              .photo-wrap
                %picture
                  %source{:media => "(max-width: 500px)", :srcset => "{PhotoURL-500}"}
                  %source{:media => "(min-width: 501px, max-width:1280px)", :srcset => "{PhotoURL-HighRes}"}
                  %source{:media => "(min-width:1281px)", :srcset => "{PhotoURL-Panorama}"}
                  %img{:src => "{PhotoURL-Panorama}", :alt => "{PhotoAlt}"}
                {block:Exif}
                .exif-trigger
                .exif-contain
                  %h5 {block:Camera}{Camera}{/block:Camera}{block:FocalLength} / {FocalLength}{/block:FocalLength}{block:Aperture} / {Aperture}{/block:Aperture}{block:Exposure} / {Exposure}{/block:Exposure}{block:ISO} / {ISO}{/block:ISO}
                {/block:Exif}
                {block:LinkURL}
                .clickthrough
                  {LinkOpenTag}{LinkURL}{LinkCloseTag}
                {/block:LinkURL}
              {block:Caption}
              .caption-post-body
                {Caption}
              {/block:Caption}
              {/block:Panorama}
              
              -# Photoset Post
              {block:Photoset}
              .photoset-imgs-wrap
                .js-photoset
                  %ul.slides
                    {block:Photos}
                    %li.photo-wrap{:style => "background-image: url('{PhotoURL-HighRes}');"}
                    {/block:Photos}
              .photoset-controls.js-photoset-controls
              {block:Caption}
              .caption-post-body
                {Caption}
              {/block:Caption}
              {/block:Photoset}
              
              -# Quote Post
              {block:Quote}
              %h1.quote-body {Quote}
              {block:Source}
              %h3.quote-source {Source}
              {/block:Source}


              {/block:Quote}
              
              -# Link Post
              {block:Link}
              %a.link-single{:href => "{URL}", :title => "{Name}", :target => "new"}
                {block:Thumbnail}
                {Thumbnail}
                {/block:Thumbnail}
                %h2 {Name}
                %h5 {URL}
                {block:Description}
                %p {Description}
                {/block:Description}
              {/block:Link}

              -# Chat Post
              {block:Chat}
              {block:Title} 
              %h2
                %a.permalink{:href => "{URL}"} {Title}
              {/block:Title}
              %ul.chat-content-body
                {block:Lines}
                %li{:class => "{Alt}"}
                  {block:Label}
                  .person
                    %h4 {Label}
                  {/block:Label}
                  .line 
                    %p {Line}
                {/block:Lines}
              {/block:Chat}

              -# Audio Post
              {block:Audio}
              .audio-inner
                {block:AudioEmbed}
                .audio-embed
                  {AudioEmbed}
                {/block:AudioEmbed}
                {block:AudioPlayer}
                .audio-player
                  {AudioPlayer}
                {/block:AudioPlayer}
                {block:PlayCount}
                %h5.play-count {PlayCountWithLabel}
                {/block:PlayCount}
                {block:TrackName}
                .audio-info
                  {block:AlbumArt}
                  %img.album-art{:src => "{AlbumArtURL}", :alt => "{Artist} - {Album}"}/
                  {/block:AlbumArt}
                  %h4 {TrackName}
                  {block:Artist}
                  %h5 {Artist}
                  {/block:Artist}
                  {block:Album}
                  %h5 {Album}
                  {/block:Album}
                {/block:TrackName}
              {block:Caption}
              .caption-post-body
                {Caption}
              {/block:Caption}
              {/block:Audio}
              
              -# Video Post
